<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  <packageSourceMapping>
    <packageSource key="nuget.org">
      <!-- Missing Xamarin.AndroidX packages that are causing errors -->
      <package pattern="Xamarin.AndroidX.SavedState.SavedState.Android" />
      <package pattern="Xamarin.AndroidX.Window.WindowCore" />
      <package pattern="Xamarin.AndroidX.Navigation.Common.Android" />
      <package pattern="Xamarin.AndroidX.Navigation.Runtime.Android" />
      <package pattern="Xamarin.AndroidX.Tracing.Tracing.Android" />
      <package pattern="Xamarin.AndroidX.Lifecycle.ViewModelSavedState.Android" />
      <!-- Allow all Xamarin.AndroidX packages with wildcard -->
      <package pattern="Xamarin.AndroidX.*" />
      <!-- Allow all Microsoft.Maui packages -->
      <package pattern="Microsoft.Maui.*" />
      <!-- Allow all Microsoft packages -->
      <package pattern="Microsoft.*" />
      <!-- Allow all System packages -->
      <package pattern="System.*" />
    </packageSource>
  </packageSourceMapping>
</configuration>
